<h1> Add a comment! </h1>

<% if @comment.errors.any? %>
  <ul>
    <% @comment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @comment do |f| %>
  <%= f.label :message, "Comment:" %>
  <%= f.text_area :message %>
  <br>
  <%= f.submit "Submit", class: "btn btn-default" %>
<% end %>

